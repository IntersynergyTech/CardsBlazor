<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">CardsBlazor</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="players">
                <span class="oi oi-people" aria-hidden="true"></span> View People
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="games">
                <span class="oi oi-puzzle-piece" aria-hidden="true"></span> View Games
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="viewmatches">
                <span class="oi oi-media-play" aria-hidden="true"></span> View All Matches
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="startmatch">
                <span class="oi oi-media-play" aria-hidden="true"></span> Start Match
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="oddscalc">
                <span class="oi oi-calculator" aria-hidden="true"></span> Odds Calculator
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}